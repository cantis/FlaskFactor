    "version": "0.2.0",
    "configurations": [
        {
            "name": "Factor - Debug",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                // General
                "ENV": "debug",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development",
            },
            "args": [
                "run"
            ],
            "jinja": true
        },
        {
            "name": "Factor - Stage",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                // General
                "ENV": "stage"
            },
            "args": [
                "run"
            ],
            "jinja": true
        },
        {
            "name": "Initialize",
            "type": "python",
            "request": "launch",
            "module": "init_data",
            "env": {
                // General
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}


